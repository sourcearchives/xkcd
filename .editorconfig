# This file contains configuration for EditorConfig in the repository root directory: /

root = true

[*]
charset              = unset
end_of_line          = unset
indent_size          = unset
indent_style         = unset
insert_final_newline = false
max_line_length      = off
tab_width            = unset

[codeowners,.{editorconfig,git{attributes,ignore}},*.{md,txt,yml}]
indent_style         = space
insert_final_newline = true

[*.{md,yml}]
indent_size = 2

[codeowners,mimetype,*.{xml,yml},.{editorconfig,git{attributes,ignore}}]
trim_trailing_whitespace = true

[*.{md,txt}]
trim_trailing_whitespace = false

[*.xml]
insert_final_newline = false

[mimetype]
insert_final_newline = false

[.gitkeep]
insert_final_newline     = false
max_line_length          = 0
trim_trailing_whitespace = true
