; This file contains configuration for EditorConfig.
; Information about EditorConfig is available here: [https://editorconfig.org/]

; These rules are used by EditorConfig applications to make consistent text formatting easier.

; don’t look for more .editorconfig files in higher directories
root = true

; unset/disable all config for all files
[*]
charset                  = unset
end_of_line              = unset
indent_size              = unset
indent_style             = unset
insert_final_newline     = false
max_line_length          = off
tab_width                = unset
trim_trailing_whitespace = false

; .gitkeep files should always be empty
[.gitkeep]
indent_size              = 0
indent_style             = space
max_line_length          = 0
trim_trailing_whitespace = true

; all text files
[*.csv,.editorconfig,.gitattributes,.git-blame-ignore-revs,.gitignore,*.html,*.js,*.json,*.md,mimetype,*.svg,*.txt,*.xml,*.yml]
charset      = utf-8
end_of_line  = lf
indent_style = space

; CSV (comma-separated values) files
[*.csv]
indent_size              = 1
insert_final_newline     = true
trim_trailing_whitespace = true

; EditorConfig files
[.editorconfig]
indent_size              = 1
insert_final_newline     = true
max_line_length          = 1024
trim_trailing_whitespace = true

; gitattributes files
[.gitattributes]
indent_size              = 1
insert_final_newline     = true
trim_trailing_whitespace = true

; git-blame-ignore-revs files
[.git-blame-ignore-revs]
indent_size              = 0
insert_final_newline     = true
trim_trailing_whitespace = true

; gitignore files
[.gitignore]
indent_size              = 1
insert_final_newline     = true
trim_trailing_whitespace = true

; HTML (HyperText Markup Language) files
[*.html]
insert_final_newline = true

; JavaScript files
[*.js]
insert_final_newline     = true
trim_trailing_whitespace = true

; JSON (JavaScript Object Notation) files
[*.json]
insert_final_newline     = true
trim_trailing_whitespace = true

; JSON with comments files
[.vscode/**.json]
indent_size = 2

; Markdown files
[*.md]
indent_size          = 2
insert_final_newline = true

; mimetype files
[mimetype]
indent_size              = 0
trim_trailing_whitespace = true

; plaintext files
[*.txt]
insert_final_newline = true

; SVG (Scalable Vector Graphics) files
[*.svg]
insert_final_newline = true

; XML (Extensible Markup Language) files
[*.xml]
indent_size              = 2
insert_final_newline     = true
trim_trailing_whitespace = true

; LibreOffice-generated XML files
[content/en/print/xkcd_volume_0/odg/**.xml]
indent_size              = 1
insert_final_newline     = false
trim_trailing_whitespace = false

; YAML (YAML Ain’t Markup Language) files
[*.yml]
indent_size              = 2
insert_final_newline     = true
trim_trailing_whitespace = true

