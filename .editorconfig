# This file contains configuration for EditorConfig [https://editorconfig.org/] in the repository root directory: /

root = true

[*]
charset              = unset
end_of_line          = unset
indent_size          = unset
indent_style         = unset
insert_final_newline = false
max_line_length      = off
tab_width            = unset

[codeowners,.{editorconfig,git{attributes,ignore}},*.{md,sh,txt,xml,yml}]
indent_style         = space
insert_final_newline = true

[*.{md,sh,xml,yml}]
indent_size = 2

[codeowners,mimetype,*.{sh,xml,yml},.{editorconfig,git{attributes,ignore}}]
trim_trailing_whitespace = true

[*.{md,txt}]
trim_trailing_whitespace = false

[mimetype,xkcd/en/print/xkcd_volume_0/odg/*.xml]
insert_final_newline = false

[xkcd/en/print/xkcd_volume_0/odg/*.xml]
indent_size = 1

[.gitkeep]
insert_final_newline     = false
max_line_length          = 0
trim_trailing_whitespace = true
