/*
 * This file contains configuration for Visual Studio Code.
 * Information about settings.json is available here: [https://code.visualstudio.com/docs/getstarted/settings]
 */

/*
 * These rules are used by Visual Studio Code to determine metadata, editor configuration, etc. These workspace settings override user settings.
 *
 * To go to the settings editor with the desktop menu:
 *    Windows/Linux: File → Preferences → Settings
 *            macOS: Code → Preferences → Settings
 *
 * To go to the workspace settings editor with the Command Palette:
 *    > Preferences: Open Workspace Settings
 *
 * To manually open the workspace settings.json file with the Command Palette:
 *    > Preferences: Open Workspace Settings (JSON)
 */

{
  "files.associations": {
     ".editorconfig":  "ini",
     ".empty":         "plaintext",
     ".gitattributes": "properties",
     ".gitignore":     "ignore",
    "*.html":          "html",
    "*.js":            "javascript",
    "*.json":          "json",
     ".vscode/**.json":"jsonc",
    "*.md":            "markdown",
      "mimetype":      "plaintext",
    "*.sh":            "shellscript",
    "*.svg":           "svg",
    "*.txt":           "plaintext",
     ".working":       "plaintext",
    "*.xml":           "xml",
    "*.yml":           "yaml"
  }
}
